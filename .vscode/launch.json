    "version": "0.2.0",
    "compounds": [
        {
          "name": "Go+ng serve",
          "configurations": ["Start API", "ng serve"]
        }
    ],
    "configurations": [
        {
            "name": "Start API",          
            "type": "go",
            "request": "launch",
            // "preLaunchTask": "start serve",
            // "postDebugTask": "end serve",
            "mode": "debug",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceRoot}",
            "env": {},
            "args": [],
            "showLog": true
        },
        {
            "name": "ng serve",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "npm",
            "runtimeArgs": [ "start" ],
            "port": 4200,
            "cwd": "${workspaceFolder}/ui"
        }
    ]
}